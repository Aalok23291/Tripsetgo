<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/spendonew">

    <EditText
        android:id="@+id/expense_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:hint="Expense Name"
        android:padding="12dp"

        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <EditText
        android:id="@+id/expense_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expense Description"
        android:textColor="@android:color/black"

        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/expense_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"

        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="@android:color/darker_gray"/>

    <!-- Paid By Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:text="Paid By:"
        android:textColor="@color/backk_background" />

    <Spinner
        android:id="@+id/paid_by_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner" />

    <!-- Split Expense Checkbox -->
    <CheckBox
        android:id="@+id/split_expense_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split this expense?"
        android:textColor="@color/backk_background"
        android:paddingTop="12dp" />

    <!-- Selected Members Button -->
    <Button
        android:id="@+id/split_between_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Members to Split"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_rounded_gradient"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:visibility="gone" /> <!-- Initially hidden -->

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/add_expense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:layout_gravity="center"
        android:background="@drawable/button_rounded_gradient"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginTop="24dp" />

</LinearLayout>
